<h1>Create a Cat!</h1>

<form action="<<%= cats_url %>" method="post">
  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]">
  
  <br>

  <label for="birth_date">Birth Date</label>
  <input id="birth_date" type="date" name="cat[date]">

  <br>

  <label for="sex">Sex</label>
  <select id="sex"name="cat[sex]">
    <option disabled selected>-- Please Select --</option>
    <option value="M">Male</option>
    <option value="F">Female</option>
  </select>

  <br>

  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled selected>-- Please Select --</option>
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="gray">Gray</option>
    <option value="orange">Orange</option>
  </select>

  <br>

  <label for="description">Description</label>
  <textarea id="description" name="cat[description]"></textarea>

  <br>
  <br>
  
  <input type="submit" value="Create this cat!">
</form>