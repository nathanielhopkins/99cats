<h1>Rent a Cat!</h1>

<form action="<%= cat_rental_requests_url%>" method="post">
  <label for="select_cat">Select a Cat:</label>
  <select id="select_cat" name="cat_rental_request[cat_id]">
    <option disabled selected>-- Please Select --</option>
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name%></option>
    <% end %>
  </select>
  
  <br>

  <label for="start_date">Start Date:</label>
  <input id="start_date" type="date" name="cat_rental_request[start_date]">

  <br>

  <label for="end_date">End Date:</label>
  <input id="end_date" type="date" name="cat_rental_request[end_date]">

  <br>
  <br>

  <input type="submit" value="create rental">
</form>